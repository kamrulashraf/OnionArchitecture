@model OA.Web.Models.TouristViewModel

<h2>Add Tourist Place</h2>
<form asp-controller="TouristPlaces" asp-action="create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="hidden">
         <input name="nameSearch" value="@ViewBag.search"/>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Address"></label>
        <input type="text" class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input type="file" asp-for="Image" id="image" name="img" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div>
        <label>Country</label>
        <select asp-for="LocationId"
                asp-items="@ViewBag.Country">
            <option>Please select one</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input type="number" asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <input type="submit" />
</form>